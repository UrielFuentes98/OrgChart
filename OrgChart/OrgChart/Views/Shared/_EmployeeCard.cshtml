@model Employee

<div class="col-3 mb-3">
    <div class="card pt-2">
        <img src="https://via.placeholder.com/150" class="card-image" alt="executive">
        <div class="card-body pb-1">
            <h5 class="card-title">@Model.FirstName @Model.LastName</h5>
            <p class="card-entry">@Model.Position</p>
            <p class="card-entry">@Model.Office</p>
            <a class="icon-link" title="Detail"
               asp-controller="Employee"
               asp-action="Detail"
               asp-route-empId="@Model.EmployeeId">
                <i class="fas fa-search-plus"></i>
            </a>
            <a class="icon-link" title="Edit"
               asp-controller="Employee"
               asp-action="Edit"
               asp-route-empId="@Model.EmployeeId"
               asp-route-isEdit="true">
                <i class="far fa-edit"></i>
            </a> 
            <a class="icon-link" title="Delete"
               asp-controller="Employee"
               asp-action="DeletePreview"
               asp-route-empId="@Model.EmployeeId">
               <i class="fas fa-trash"></i>
            </a>
            <div class="text-center mt-1">
                <a class="icon-link" title="Add Employee"
                   asp-controller="Employee"
                   asp-action="Edit"
                   asp-route-empId="@Model.EmployeeId"
                   asp-route-isEdit="false">
                    <i class="fas fa-plus-circle"></i>
                </a>
            </div>
        </div>
    </div>
</div>

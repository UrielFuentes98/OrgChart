@model ChartData

@{
    ViewData["Title"] = "Chart";
}

<h2>@ViewBag.CompanyName</h2>
@if (Model.Manager != null && Model.Employees != null)
{
    <div class="row justify-content-center">
        <partial name="_EmployeeCard" model="Model.Manager" />
    </div>
    <div class="row justify-content-center">
        @foreach (var employee in Model.Employees)
        {
            <partial name="_EmployeeCard" model="employee" />
        }
    </div>
}
else
{
    @if (!String.Equals(@ViewBag.CompanyName, "Select a company"))
    {
        <div class="text-center">
            <a class="btn btn-primary"
               asp-controller="Employee"
               asp-action="Edit"
               asp-route-isEdit="false">Add first employee.</a>
        </div>
    }
}




@model List<EmployeeWithImgString>

@{
    ViewData["Title"] = "Employees List";
}

<h2>@ViewBag.CompanyName</h2>
@if (Model.Any())
{
    <div class="row">
        @foreach (var employee in Model)
        {
            <partial name="_EmployeeCard" model="employee" />
        }
    </div>
}
else
{
    //if company selected add button to create first employee

    @if (!String.Equals(@ViewBag.CompanyName, "Select a company"))
    {
        <div>
            <a class="btn btn-primary"
               asp-controller="Employee"
               asp-action="Edit"
               asp-route-isEdit="false">Add first employee.</a>
        </div>
    }
}
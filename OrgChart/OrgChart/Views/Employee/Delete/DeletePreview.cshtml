@model EmployeeWithImgString

@{
    ViewData["Title"] = "Delete preview";
}

<div class="row justify-content-center">
    <div class="col">
        <partial name="_EmployeeCard" model="Model" />
        <a class="btn btn-danger mr-3"
           asp-controller="Employee"
           asp-action="DeleteConfirmation"
           asp-route-empId="@Model.Employee.EmployeeId">
            Confirm Delete
        </a>
        <a class="btn btn-primary"
           asp-controller="Diagram"
           asp-action="Chart">
            Cancel
        </a>
    </div>
</div>

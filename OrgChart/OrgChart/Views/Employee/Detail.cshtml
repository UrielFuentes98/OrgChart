@model Employee

@{
    ViewData["Title"] = "Detail";
}

<div class="row justify-content-center">
    <div class="col-3 ">

        <h2 style="text-align: center">@Model.FirstName @Model.LastName</h2>
        <img class="card-image" src="https://via.placeholder.com/150" />
        <ul class="list-group mt-2">
            <li class="list-group-item">
                <span class="mt-3 font-weight-bold">Position: </span> <span>@Model.Position</span>
            </li>
            <li class="list-group-item">
                <span class="font-weight-bold">Email: </span> <span>@Model.Email</span>
            </li>
            <li class="list-group-item">
                <span class="font-weight-bold">Phone: </span> <span>@Model.Phone</span>
            </li>
            <li class="list-group-item">
                <span class="font-weight-bold">Office: </span> <span>@Model.Office</span>
            </li>
        </ul>
        <a class="btn btn-link" asp-controller="Diagram" asp-action="Chart" asp-route-empId="@Model.EmployeeId">View Org Chart.</a>
    </div>
</div>

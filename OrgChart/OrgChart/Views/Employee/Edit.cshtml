@model Employee

    <div class="row">
        <div class="col-4 offset-1">
            <form method="post" asp-action="Edit" asp-route-empId="@Model.EmployeeId">
                <input type="hidden" asp-for="EmployeeId" />
                <div class="form-group">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Position"></label>
                    <input asp-for="Position" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Phone"></label>
                    <input asp-for="Phone" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Office"></label>
                    <input asp-for="Office" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
        <div class="col-3 align-self-center">
            <img src="https://via.placeholder.com/600" class="card-image" alt="executive picture">
        </div>
    </div>
